{% extends '@front/page.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/web/themes/front/assets/css/pages/page_log_reg_v1.css') }}">
    <link rel="stylesheet" href="{{ asset('/web/themes/front/css/user/user_login_page.css') }}">
{% endblock %}

{% block content %}


    <!--=== Content Part ===-->
    <div class="container content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <h2>Sign In</h2>
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <form class="reg-page" method="post" action="{{ path('user_login_check_page') }}">
                    <div class="form-group">
                        <label for="_username">Username</label>
                        <input name="_username" id="_username" type="text" placeholder="Username" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="_password">Password</label>
                        <input name="_password" id="_password" type="password" placeholder="Password" class="form-control" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {% if data.use_ajax == 1 %}
                                <input type="hidden" name="ajax" value="1">
                            {% else %}
                                <input type="hidden" name="ajax" value="0">
                            {% endif %}

                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Login</button>
                    </div>
                    <hr>
                    <ul>
                        <li><a href="{{ path('user_forgot_password_page') }}">Forgot password</a></li>
                        <li><a href="{{ path('user_register_page') }}">Create an account</a></li>
                    </ul>
                </form>


            </div>
        </div><!--/row-->
    </div><!--/container-->
    <!--=== End Content Part ===-->


{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/src/CoreBundle/Resources/front/views/js/user/user_login_page.js') }}"></script>
{% endblock %}