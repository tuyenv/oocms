{% extends '@admin/page.html.twig' %}
{% block stylesheets %}

{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Content
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_page') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li class="active">Content</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Content Management</h3>
                        <div class="box-tools pull-right">
                            <a href="{{ path('admin_node_edit_page', {'nodeId':0}) }}"
                               class="btn btn-sm btn-success"><i class="fa glyphicon-plus"></i> Add new content</a>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Edit</th>
                            </tr>
                            {% for item in data.items %}
                                <tr>
                                    <td>
                                        <a href="{{ item.detail_link }}">{{ item.title }}</a>
                                    </td>
                                    <td>
                                        {{ item.status }}
                                    </td>
                                    <td>
                                        {% for menu in item.action_link_list %}
                                            <a class="btn btn-edit"
                                               href="{{ menu.link }}">
                                                <i class="fa fa-edit"></i>
                                                {{ menu.title }}
                                            </a>
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            {% if data.pager.first_href != '' %}
                                <li><a href="{{ data.pager.first_href }}">First</a></li>
                            {% endif %}
                            {% if data.pager.prev_href != '' %}
                                <li><a href="{{ data.pager.prev_href }}">Prev</a></li>
                            {% endif %}
                            {% for item in data.pager.items %}
                                {% if item.href == '' %}
                                    <li class="active"><a href="{{ item.href }}">{{ item.title }}</a></li>
                                {% else %}
                                    <li><a href="{{ item.href }}">{{ item.title }}</a></li>

                                {% endif %}
                            {% endfor %}
                            {% if data.pager.next_href != '' %}
                                <li><a href="{{ data.pager.next_href }}">Next</a></li>
                            {% endif %}
                            {% if data.pager.last_href != '' %}
                                <li><a href="{{ data.pager.last_href }}">Last</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->

        </div>
        <!-- /.row -->

    </section><!-- /.content -->

{% endblock %}


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/web/themes/core/admin/js/admin_node/admin_node_page.js') }}"></script>
{% endblock %}