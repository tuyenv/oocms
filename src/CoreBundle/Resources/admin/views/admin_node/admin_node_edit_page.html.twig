{% extends '@admin/page.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit Node
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_page') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li class="active">Edit Node</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Node</h3>
                    <div class="box-tools pull-right">
                        <a href="{{ path('admin_node_page', {}) }}"
                           class="btn btn-sm btn-success"><i class="fa glyphicon-backward"></i> Back to the list</a>
                    </div>
                </div>
                {{ form_start(data.admin_node_edit_form) }}
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_node_edit_form.title) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_node_edit_form.title) }}
                                {{ form_widget(data.admin_node_edit_form.title, {'attr': {'class':'form-control','placeholder':'Title'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_node_edit_form.friendlyUrl) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_node_edit_form.friendlyUrl) }}
                                {{ form_widget(data.admin_node_edit_form.friendlyUrl, {'attr': {'class':'form-control','placeholder':'Friendly Url'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_node_edit_form.summary) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_node_edit_form.summary) }}
                                {{ form_widget(data.admin_node_edit_form.summary, {'attr': {'class':'form-control','placeholder':'Summary'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_node_edit_form.body) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_node_edit_form.body) }}
                                {{ form_widget(data.admin_node_edit_form.body, {'attr': {'class':'form-control','placeholder':'Body'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_node_edit_form.status) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_node_edit_form.status) }}
                                {{ form_widget(data.admin_node_edit_form.status, {'attr': {'class':'form-control','placeholder':'Status'}}) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="box-footer clearfix">
                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                        </div>
                    </div>
                </div>
                {{ form_end(data.admin_node_edit_form) }}
            </div>

        </div>
        <!-- /.col -->

    </div>
    <!-- /.row -->

{% endblock %}