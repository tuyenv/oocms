{% extends '@admin/page.html.twig' %}
{% block title %}{{ page_title }}{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Add Manager
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_page') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li class="active">Add Manager</li>
        </ol>
    </section>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Manager</h3>
                    </div>
                    {{ form_start(data.admin_manager_new_form) }}
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">


                                <div class="form-group">
                                    {{ form_label(data.admin_manager_new_form.username) }}
                                    {{ form_errors(data.admin_manager_new_form.username) }}
                                    {{ form_widget(data.admin_manager_new_form.username, {'attr': {'class':'form-control','placeholder':'Username'}}) }}
                                </div>

                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    {{ form_label(data.admin_manager_new_form.password.first) }}
                                    {{ form_errors(data.admin_manager_new_form.password.first) }}
                                    {{ form_widget(data.admin_manager_new_form.password.first, {'attr': {'class':'form-control','placeholder':'Password'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(data.admin_manager_new_form.password.second) }}
                                    {{ form_errors(data.admin_manager_new_form.password.second) }}
                                    {{ form_widget(data.admin_manager_new_form.password.second, {'attr': {'class':'form-control','placeholder':'Repeat Password'}}) }}
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="box-footer clearfix">
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-primary pull-right">Create</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(data.admin_manager_new_form) }}
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->

        </div>
        <!-- /.row -->

    </section><!-- /.content -->
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/web/themes/admin/plugins/iCheck/icheck.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/web/themes/admin/js/admin_user/admin_user_edit_page.js') }}"></script>
{% endblock %}