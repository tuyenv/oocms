{% extends '@admin/base.html.twig' %}

{% block stylesheets %}
    <link href="/web/themes/core/default_admin/css/admin/admin_login_page.css" rel="stylesheet">
{% endblock %}
{% block page %}
    <div id="frm-login">
        <h3>Login</h3>
        <p class="login-box-msg">Sign in to start your session</p>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('admin_login_page') }}">
            <div class="form-group has-feedback">
                <input type="text" name="_username" class="form-control" placeholder="Email" required="">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" name="_password" class="form-control" placeholder="Password" required="">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="row">
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="/web/themes/core/default_admin/js/admin/admin_login_page.js"></script>
{% endblock %}