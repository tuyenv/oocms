{% extends '@admin/page.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit Link
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_page') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li class="active">Edit Link</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Link</h3>
                </div>
                {{ form_start(data.admin_menu_link_edit_form) }}
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_menu_link_edit_form.title) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_menu_link_edit_form.title) }}
                                {{ form_widget(data.admin_menu_link_edit_form.title, {'attr': {'class':'form-control','placeholder':'Title'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_menu_link_edit_form.path) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_menu_link_edit_form.path) }}
                                {{ form_widget(data.admin_menu_link_edit_form.path, {'attr': {'class':'form-control','placeholder':'Path'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_menu_link_edit_form.weight) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_menu_link_edit_form.weight) }}
                                {{ form_widget(data.admin_menu_link_edit_form.weight, {'attr': {'class':'form-control','placeholder':'Weight'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            {{ form_label(data.admin_menu_link_edit_form.status) }}
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                {{ form_errors(data.admin_menu_link_edit_form.status) }}
                                {{ form_widget(data.admin_menu_link_edit_form.status, {'attr': {'class':'form-control','placeholder':'Status'}}) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="box-footer clearfix">
                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                        </div>
                    </div>
                </div>
                {{ form_end(data.admin_menu_link_edit_form) }}
            </div>

        </div>
        <!-- /.col -->

    </div>
    <!-- /.row -->

{% endblock %}